# Variables de entorno para EcoShop
# Copia este archivo como .env y ajusta los valores según tu configuración

# Configuración de la aplicación
SECRET_KEY=tu_clave_secreta_muy_segura_aqui
DEBUG=True
FLASK_ENV=development

# Configuración de la base de datos MySQL
DATABASE_URL=mysql://root:password@localhost/ecommerce_db
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=password
DB_NAME=ecommerce_db

# Configuración de archivos subidos
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB máximo

# Configuración de email (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_password_email

# Configuración de pagos (para implementación futura)
STRIPE_PUBLISHABLE_KEY=pk_test_tu_clave_publica
STRIPE_SECRET_KEY=sk_test_tu_clave_secreta

# Configuración de redes sociales (opcional)
GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret

# Configuración de almacenamiento en la nube (opcional)
AWS_ACCESS_KEY_ID=tu_aws_access_key
AWS_SECRET_ACCESS_KEY=tu_aws_secret_key
S3_BUCKET_NAME=tu_bucket_name
